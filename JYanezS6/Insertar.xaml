<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JYanezS6.Insertar">
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="INSERTAR ESTUDIANTE" FontSize="20" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el Codigo" Keyboard="Numeric"/>
            <Entry x:Name="txtNomrbre" Placeholder="Ingrese el Nombre" />
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido" />
            <Entry x:Name="txtEdad" Placeholder="Ingrese la Edad" />
            <Button x:Name="btnIngresar" Text="INGRESAR" Clicked="btnIngresar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>